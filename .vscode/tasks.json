{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}/src/glad.c",
                "-o",
                "${workspaceFolder}/output/${fileBasenameNoExtension}",
                "-L${workspaceFolder}/lib/linux",
                "-I${workspaceFolder}/include",
                "-lglfw3",
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-ldl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}